{
	"name": "fluent-ui-vscode",
	"displayName": "Fluent UI for VSCode",
	"description": "Fluent UI for VSCode",
	"version": "7.1.0",
	"publisher": "be5invis",
	"author": {
		"email": "belleve@typeof.net",
		"name": "Belleve Invis",
		"url": "https://typeof.net"
	},
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Other",
		"Themes"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/be5invis/vscode-custom-css"
	},
	"bugs": {
		"url": "https://github.com/be5invis/vscode-custom-css/issues"
	},
	"preview": true,
	"icon": "images/logo.png",
	"galleryBanner": {
		"color": "#EEEEEE"
	},
	"activationEvents": [
		"*"
	],
	"main": "./src/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.installCustomCSS",
				"title": "Enable Fluent UI for VSCode"
			},
			{
				"command": "extension.uninstallCustomCSS",
				"title": "Disable Fluent UI for VSCode"
			},
			{
				"command": "extension.updateCustomCSS",
				"title": "Reload Fluent UI for VSCode"
			}
		],
		"configuration": {
			"title": "Custom CSS/JS Configuration",
			"properties": {
				"vscode_custom_css.imports": {
					"description": "Custom CSS/JS files, as an array of URLs, not file paths",
					"type": "array",
					"default": []
				},
				"vscode_custom_css.statusbar": {
					"description": "Enable Status Indicator",
					"type": "boolean",
					"default": true
				},
				"vscode_custom_css.staging_dir": {
					"description": "Directory used for storing staged CSS/JS files. Must be inside VSCode's extension directory, otherwise VSCode will refuse to load the your custom CSS/JS.",
					"type": "string",
					"default": ""
				}
			}
		}
	},
	"devDependencies": {
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0"
	},
	"dependencies": {
		"file-url": "^3.0.0",
		"node-fetch": "^2.0.0",
		"uuid": "^8.3.2"
	},
	"extensionKind": [
		"ui"
	],
	"scripts": {
		"vscode:prepublish": "npx -y rimraf node_modules && npm install --prod"
	}
}
